// eslint-config-next = https://github.com/vercel/next.js/blob/canary/packages/eslint-config-next/index.js

// the old config system will be deprecated in v9.0.0 in favor of flat config:
// https://eslint.org/blog/2022/08/new-config-system-part-2/

{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "rules": {
    "prefer-const": "error",
    "no-undef": "off",
    "@next/next/no-html-link-for-pages": "off" // this rule only works on pagesDir
  },
  "settings": {
    "tailwindcss": {
      "callees": ["cn"] // ??
    }
  }
}
