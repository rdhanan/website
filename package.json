{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n contentlayer,next 'contentlayer dev' 'next dev'",
    "build": "contentlayer build & next build",
    "start": "next start",
    "lint": "eslint --cache --cache-strategy content --cache-location=node_modules/.cache/eslint/.eslint-cache src",
    "format": "prettier --check --cache --cache-strategy content .",
    "format:write": "prettier --write --cache --cache-strategy content .",
    "typecheck": "tsc --noEmit --incremental false",
    "commit": "git-cz",
    "postinstall": "husky install"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "contentlayer": "^0.3.4",
    "next": "^13.4.9",
    "next-contentlayer": "^0.3.4",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-use": "^17.4.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^2.1.0",
    "rehype-pretty-code": "^0.10.0",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "shiki": "^0.14.3",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@commitlint/types": "^17.4.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/mdx": "^2.0.5",
    "@types/node": "^20.4.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "autoprefixer": "^10.4.14",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.9",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-mdx": "^2.1.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.25",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.6",
    "typescript": "^5.1.6"
  },
  "pnpm": {
    "overrides": {
      "@opentelemetry/api": "1.4.1",
      "@opentelemetry/core": "1.14.0",
      "@opentelemetry/exporter-trace-otlp-grpc": "0.39.1",
      "@opentelemetry/resources": "1.14.0",
      "@opentelemetry/sdk-trace-base": "1.14.0",
      "@opentelemetry/sdk-trace-node": "1.14.0",
      "@opentelemetry/semantic-conventions": "1.14.0"
    }
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
