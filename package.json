{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -c 'bgMagenta,bgBlue' -n contentlayer,next 'contentlayer dev' 'next dev'",
    "build": "contentlayer build --clearCache && next build",
    "start": "next start",
    "typecheck": "tsc --incremental false",
    "lint": "eslint --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache --cache-strategy content --cache-location=node_modules/.cache/eslint/.eslint-cache src",
    "format": "prettier --check --log-level warn --cache --cache-strategy content '**/*.{js,ts,tsx,json,yaml,css}'",
    "format:write": "prettier --write --log-level warn --cache --cache-strategy content '**/*.{js,ts,tsx,json,yaml,css}'",
    "check-all": "npm run typecheck && npm run lint && npm run format",
    "postinstall": "husky install && npx playwright install chromium"
  },
  "dependencies": {
    "@giscus/react": "^2.3.0",
    "@plaiceholder/next": "^3.0.0",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@tanem/react-nprogress": "^5.0.51",
    "@upstash/redis": "^1.25.1",
    "contentlayer": "^0.3.4",
    "next": "^14.0.3",
    "next-contentlayer": "^0.3.4",
    "next-themes": "^0.2.1",
    "plaiceholder": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-tweet": "^3.1.1",
    "react-use": "^17.4.0",
    "sharp": "^0.32.6",
    "swr": "^2.2.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/types": "^18.4.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@tailwindcss/typography": "^0.5.10",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/mdx": "^2.0.10",
    "@types/node": "^20.9.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-mdx": "^2.2.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "feed": "^4.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-mermaid": "^2.0.1",
    "rehype-pretty-code": "^0.10.2",
    "rehype-shift-heading": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "shiki": "^0.14.5",
    "tailwindcss": "^3.3.5",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "@opentelemetry/api": "~1.5.0"
  },
  "trustedDependencies": [
    "sharp"
  ],
  "//": [
    "sharp is required by plaiceholder",
    "`npx playwright install` is required by rehype-mermaid",
    "esbuild peer dependency: https://github.com/contentlayerdev/contentlayer/issues/530"
  ]
}
