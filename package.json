{
  "name": "tifan.me",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "conc -k -c 'bgMagenta,bgBlue' -n contentlayer,next 'contentlayer dev' 'next dev'",
    "build": "contentlayer build --clearCache && next build",
    "start": "next start",
    "typecheck": "tsc --noEmit --incremental false",
    "lint": "eslint --ext ts,tsx --report-unused-disable-directives --max-warnings 0 src",
    "format": "prettier --check --log-level warn '**/*.{js,ts,tsx,json,yaml,css}'",
    "format:write": "prettier --write --log-level warn '**/*.{js,ts,tsx,json,yaml,css}'",
    "check-all": "npm run typecheck && npm run lint && npm run format",
    "lighthouse": "npx unlighthouse --site tifan.me --desktop",
    "lighthouse:mobile": "npx unlighthouse --site tifan.me --mobile",
    "postinstall": "npx playwright install chromium"
  },
  "dependencies": {
    "@giscus/react": "^3.0.0",
    "@plaiceholder/next": "^3.0.0",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@tanem/react-nprogress": "^5.0.51",
    "contentlayer": "^0.3.4",
    "feed": "^4.2.2",
    "next": "^14.1.4",
    "next-contentlayer": "^0.3.4",
    "next-mdx-remote": "^4.4.1",
    "next-themes": "^0.3.0",
    "plaiceholder": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-tweet": "^3.2.0",
    "react-use": "^17.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-mermaid": "^2.1.0",
    "rehype-pretty-code": "^0.13.1",
    "rehype-shift-heading": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.33.3",
    "shiki": "^1.2.3",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@tailwindcss/typography": "^0.5.12",
    "@types/node": "^20.12.2",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.3"
  },
  "trustedDependencies": [
    "sharp"
  ],
  "overrides": {
    "@opentelemetry/api": "~1.5.0"
  },
  "//": [
    "TODO remove overrides once contentlayer is replaced",
    "playwright is required by rehype-mermaid"
  ]
}
