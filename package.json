{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --cache --cache-strategy content --cache-location=node_modules/.cache/eslint/.eslint-cache src",
    "format": "prettier --check --cache --cache-strategy content .",
    "format:write": "prettier --write --cache --cache-strategy content .",
    "typecheck": "tsc --noEmit --incremental false",
    "commit": "git-cz",
    "postinstall": "husky install"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "contentlayer": "^0.3.3",
    "cva": "npm:class-variance-authority@^0.6.0",
    "dayjs": "^1.11.8",
    "lucide-react": "latest",
    "next": "^13.4.7",
    "next-contentlayer": "^0.3.3",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.13.2",
    "zod": "^3.21.4",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@commitlint/types": "^17.4.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "autoprefixer": "^10.4.14",
    "commitizen": "^4.3.0",
    "eslint": "^8.43.0",
    "eslint-config-next": "^13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-tailwindcss": "^3.12.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.6",
    "typescript": "^5.1.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "esbuild"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
