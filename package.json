{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "rm -rf .next && concurrently -k -c 'bgMagenta,bgBlue' -n contentlayer,next 'contentlayer dev' 'next dev'",
    "build": "contentlayer build --clearCache && next build",
    "start": "next start",
    "lint": "eslint --cache --cache-strategy content --cache-location=node_modules/.cache/eslint/.eslint-cache src",
    "format": "prettier --check --cache --cache-strategy content **/*.{js,ts,tsx,json,yaml,css}",
    "format:write": "prettier --write --cache --cache-strategy content **/*.{js,ts,tsx,json,yaml,css}",
    "typecheck": "tsc --noEmit --incremental false",
    "postinstall": "husky install && pnpm dlx playwright install"
  },
  "dependencies": {
    "@giscus/react": "^2.3.0",
    "@plaiceholder/next": "^3.0.0",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@upstash/redis": "^1.23.4",
    "contentlayer": "^0.3.4",
    "next": "^13.5.6",
    "next-contentlayer": "^0.3.4",
    "next-themes": "^0.2.1",
    "nprogress": "^0.2.0",
    "plaiceholder": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-tweet": "^3.1.1",
    "react-use": "^17.4.0",
    "sharp": "^0.32.6",
    "swr": "^2.2.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/types": "^17.4.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@tailwindcss/typography": "^0.5.10",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/mdx": "^2.0.9",
    "@types/node": "^20.8.7",
    "@types/nprogress": "^0.2.2",
    "@types/react": "^18.2.29",
    "@types/react-dom": "^18.2.14",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-next": "^13.5.6",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-mdx": "^2.2.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "feed": "^4.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "rehype-autolink-headings": "^7.0.0",
    "rehype-external-links": "^3.0.0",
    "rehype-mermaidjs": "^2.0.0",
    "rehype-pretty-code": "^0.10.1",
    "rehype-shift-heading": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "shiki": "^0.14.5",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.2.2"
  },
  "pnpm": {
    "overrides": {
      "@opentelemetry/api": "~1.5.0"
    }
  },
  "//": [
    "plaiceholder depends on sharp",
    "`pnpm dlx playwright install` is needed by rehype-mermaidjs"
  ]
}
